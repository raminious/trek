{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "strictNullChecks": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "pretty": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "outDir": "dist",
    "lib": [
      "es6"
    ],
    "types": [
      "node",
      "mocha"
    ],
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "paths": {
      "types/*": [
        "types/*"
      ],
      "@db/*": [
        "app/db/models/*"
      ],
      "@adapters/*": [
        "app/adapters/*"
      ],
      "@constants/*": [
        "app/constants/*"
      ],
      "@utils/*": [
        "app/utils/*"
      ],
      "@libs/*": [
        "app/libs/*"
      ]
    }
  },
  "include": [
    "tools/**/*",
    "app/**/*",
    "types/**/*"
  ],
  "exclude": [
    "app/**/*.test.ts"
  ]
}